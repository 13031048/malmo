<Window x:Class="Microsoft.Research.Malmo.HumanAction.CurriculumDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Curriculum" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Missions" Margin="5,0,5,5" >
            <StackPanel x:Name="missionSP" Grid.Row="0" AllowDrop="True" />
        </GroupBox>
        <Button x:Name="addB" Grid.Row="1" Content="&#xE710;" Padding="5" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Top" Click="addB_Click" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="okB" Content="OK" Width="75" Margin="5" Click="okB_Click" />
            <Button x:Name="cancelB" Content="Cancel" Width="75" Margin="5" Click="cancelB_Click" />
        </StackPanel>
    </Grid>
</Window>
